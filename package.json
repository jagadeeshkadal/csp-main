{
  "private": true,
  "workspaces": [
    "csp-backend",
    "csp-frontend"
  ],
  "scripts": {
    "install-all": "npm install && npm install --prefix csp-backend && npm install --prefix csp-frontend",
    "build": "npm run build --workspace=csp-frontend && cp -r csp-frontend/dist ./public",
    "postinstall": "npx prisma@6.19.1 generate --schema=csp-backend/prisma/schema.prisma"
  },
  "devDependencies": {
    "@vercel/node": "^5.5.27"
  }
}