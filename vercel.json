{
    "version": 2,
    "builds": [
        {
            "src": "csp-backend/api/index.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "csp-backend/prisma/schema.prisma"
                ]
            }
        },
        {
            "src": "csp-frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/csp-backend/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/$1"
        }
    ]
}